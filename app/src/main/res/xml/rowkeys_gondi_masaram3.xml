<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked">
            <!-- Old style KHA Takri -->
            <Key latin:keySpec="&#x11d0d;" />
            <!-- Extra letter Takri -->
            <Key latin:keySpec="&#x11d00;" />
            <!-- U+11698: "ण" DEVANAGARI LETTER NNA -->
            <Key latin:keySpec="&#x11d1a;" />
            <!-- Extra letter Takri -->
            <Key latin:keySpec="&#x11d00;" />
            <!-- Extra letter Takri -->
            <Key latin:keySpec="&#x11d00;" />
            <!-- U+116A7: "श" DEVANAGARI LETTER SHA -->
            <Key latin:keySpec="&#x11d29;" />
            <!-- U+116B8: "ष" DEVANAGARI LETTER SSA -->
            <Key latin:keySpec="&#x11d0d;" />
            <!-- Because the font rendering system prior to API version 16 can't automatically
                 render dotted circle for incomplete combining letter of some scripts, different
                 set of Key definitions are needed based on the API version. -->
            <!-- Extra letter Takri -->
            <Key latin:keySpec="&#x11d00;" />
            <!-- U+11693: "ञ" DEVANAGARI LETTER NYA -->
            <Key latin:keySpec="&#x11d15;" />
        </case>
        <default>
            <!-- Because the font rendering system prior to API version 16 can't automatically
                 render dotted circle for incomplete combining letter of some scripts, different
                 set of Key definitions are needed based on the API version. -->
            <!-- Extra letter Takri -->
            <Key latin:keySpec="&#x11d00;" />
            <!-- Because the font rendering system prior to API version 16 can't automatically
                 render dotted circle for incomplete combining letter of some scripts, different
                 set of Key definitions are needed based on the API version. -->
            <!-- U+116AB: "ं" DEVANAGARI SIGN ANUSVARA -->
            <Key latin:keySpec="&#x11d40;" />
            <!-- U+116A2: "म" DEVANAGARI LETTER MA
                 U+0950: "ॐ" DEVANAGARI OM -->
            <Key
                latin:keySpec="&#x11d24;"
                latin:moreKeys="&#x950;" />
            <!-- U+1169D: "न" DEVANAGARI LETTER NA
                 U+11693: "ञ" DEVANAGARI LETTER NYA
                 U+1168E: "ङ" DEVANAGARI LETTER NGA
                 U+1169D/U+116B7: "ऩ" DEVANAGARI LETTER NA/DEVANAGARI SIGN NUKTA -->
            <Key
                latin:keySpec="&#x11d1f;"
                latin:moreKeys="&#x11d15;,&#x11d10;,&#x11d1f;" />
            <!-- U+116A6: "व" DEVANAGARI LETTER VA -->
            <Key latin:keySpec="&#x11d28;" />
            <!-- U+116A5: "ल" DEVANAGARI LETTER LA
                 U+090C: "ऌ" DEVANAGARI LETTER VOCALIC L
                 U+0961: "ॡ" DEVANAGARI LETTER VOCALIC LL -->
            <Key
                latin:keySpec="&#x11d27;" />
            <!-- U+116A8: "स" DEVANAGARI LETTER SA -->
            <Key latin:keySpec="&#x11d2b;" />
            <!-- U+116A3: "य" DEVANAGARI LETTER YA
                 U+095F: "य़" DEVANAGARI LETTER YYA -->
            <Key
                latin:keySpec="&#x11d25;" />
            <!-- Because the font rendering system prior to API version 16 can't automatically
                 render dotted circle for incomplete combining letter of some scripts, different
                 set of Key definitions are needed based on the API version. -->
            <!-- U+116B7: "़" DEVANAGARI SIGN NUKTA -->
            <Key latin:keySpec="&#x11D42;" />
        </default>
    </switch>
</merge>
